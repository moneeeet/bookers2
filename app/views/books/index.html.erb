<div>
  <h3><%= @user.name %></h3>
      <p>name <%= image_tag @user.get_profile_image(100,100) %></p>
      <p>introduction <%= @user.introduction %></p>
</div>

<h1>New Book</h1>
  <%= form_with model: @book do |f| %>

    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
    <%= f.submit 'Create book' %>
  <% end %>


  <h1>Books</h1>
  <% @books.each do |book| %>
  <div>
    <p>投稿ユーザー画像：<%= image_tag book.user.get_profile_image(100,100) %></p>
    <p>Title：<%= book.title %></p>
    <p>Opinion：<%= book.body %></p>

  </div>
<% end %>