<div>
  <h3><%= @user.name %></h3>
      <p>name <%= image_tag @user.get_profile_image(100,100) %></p>
      <p>introduction <%= @user.introduction %></p>
</div>

<h1>New Book</h1>
  <%= form_with model: @book do |f| %>

    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
    <%= f.submit 'Create book' %>
  <% end %>

<h1>Book detail</h1>

  <p><%= image_tag @user.get_profile_image(100,100) %></p>

  <p><%= @user.name %></p>
    <%= link_to book_path(@book.id) do %>
    <p><%= @book.title %></p>
    <% end %>
    <p>Opinion：<%= @book.body %></p>



    <% if @book.user == current_user %>
    <%= link_to "Edit", edit_book_path %></p>
    <%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に消しますか" %>
  <% end %>

  </div>