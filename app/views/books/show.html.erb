<div class="container px-5 px-sm-0">
 <div class="row">
  <div class="col-md-3">

  <%= flash[:success]%>


  <%= render 'users/list', user: @user, book: @book %>
  </div>
<div class="col-md-8 offset-md-1">
  <h1>Book detail</h1>

  <table class="table">
    <tbody>
      <tr>
        <td><%= image_tag @user.get_profile_image(100,100) %> </br>
            <% link_to user_path %><%= @user.name %>
        </td>
        <td> <%= link_to book_path(@book.id) do %>
             <%= @book.title %>
             <% end %>
        </td>
        <td><%= @book.body %></td>
        <% if @book.user == current_user %>
        <td><%= link_to "Edit", edit_book_path, class: "btn btn-sm btn-success" %></p></td>
        <td><%= link_to "Destroy", book_path(@book), method: :delete, class: "btn btn-sm btn-danger",  "data-confirm" => "本当に消しますか?" %>
        <% end %>
        </td>
      </tr>
    </tbody>
  </table>
  </div>
  </div>